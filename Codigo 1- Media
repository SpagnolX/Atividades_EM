programa {
  funcao inicio() {

    inteiro num1, num2, num3, num4, num5, media

    escreva("Calculador de media das idades dos atletas\n")

    escreva("Primeiro atleta ")
    leia(num1)

    escreva("Segundo atleta ")
    leia(num2)

    escreva("Terceiro atleta ")
    leia(num3)

    escreva("Quarto atleta ")
    leia(num4)
    
    escreva("Quinto atleta ")
    leia(num5)

    media = (num1 + num2 + num3 + num4 + num5) / 5
    
    escreva("A média das idades é " + media)
  }
}
